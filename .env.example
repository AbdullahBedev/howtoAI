# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

DATABASE_URL="postgresql://user@localhost:5432/howtoai?schema=public"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Auth
# Generate one here: https://generate-secret.vercel.app/32
NEXTAUTH_SECRET=""
NEXTAUTH_URL="http://localhost:3000"

# Email (Resend)
RESEND_API_KEY=""

# Gemini API
GEMINI_API_KEY=""

# Rate Limiting
RATE_LIMIT_MAX=100 # Maximum number of requests per window
RATE_LIMIT_WINDOW_MS=60000 # Window size in milliseconds (1 minute) 